<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="baseLayout" template="/WEB-INF/view/layout.ftl"
		templateType="freemarker">
		<put-attribute name="header" value="/WEB-INF/view/header.ftl"
			type="freemarker" />
		<put-attribute name="title" value="Sample Title" />
		<put-attribute name="menu" value="/WEB-INF/view/menu.ftl"
			type="freemarker" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/view/footer.ftl"
			type="freemarker" />
	</definition>
	<definition name="indexPage" extends="baseLayout">
		<put-attribute name="title" value="Index Page" />
		<put-attribute name="body" value="/WEB-INF/view/index.ftl"
			type="freemarker" />
		<put-attribute name="footer" value="/WEB-INF/view/index_footer.ftl"
			type="freemarker" />
	</definition>
	<definition name="aboutPage" extends="baseLayout">
		<put-attribute name="title" value="About Page" />
		<put-attribute name="body" value="/WEB-INF/view/about.ftl"
			type="freemarker" />
	</definition>
	<definition name="helpPage" extends="baseLayout">
		<put-attribute name="title" value="Help Page" />
		<put-attribute name="body" value="/WEB-INF/view/help.ftl"
			type="freemarker" />
	</definition>
</tiles-definitions>  